{
    "manifest_version": 3,
    "name": "AADL 3 Helper Extension",
    "description": "AADL 3 Auto: Refresh and Input filler",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "res/icon48.png"
    },
    "author": {
      "name":  "ZEROUAL Aymene",
      "email": "aymenezeroual@gmail.com"
    },

    "background": {
      "service_worker": "js/service_worker.js"
    },

    "icons": {
      "16":  "res/icon16.png",
      "32":  "res/icon32.png",
      "48":  "res/icon48.png",
      "128": "res/icon128.png"
    },

    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "scripting",
      "webRequest",
      "notifications",
      "webNavigation"
    ],

    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ]

  }